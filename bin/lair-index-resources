#! /bin/sh
RETDIR=$(pwd)
topdir(){
	TEMP=$(echo "$1" | tr "/" "\n")
	R=""
	P=""
	for p in "$TEMP"; do
            P="$p"
	    echo $P
	    if [ -d "$P" ]; then
	        R=""
	        R="$p"
	    fi
	done
	#echo "$R"
}

if [ -d "$1" ]; then
	DIR="$1"
	cd "$DIR"
	WORKDIR=$(pwd)
	for d in $WORKDIR/*; do
	    if [ -d $d ]; then
		for e in $d/*; do
		    if [ -d $e ]; then
		        for f in $e/*; do
			    if [ -d $f ]; then
				for g in $f/*; do
		                    topdir $g 
		                done
			    else
		                topdir $f 
			    fi
		        done
		    else
		        topdir $e 
		    fi
		done
	    else
		topdir $d 
	    fi
	done
fi
cd "$RETDIR"