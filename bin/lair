#! /bin/sh
DEFAULT="/usr/share/lair"
if [ -f /etc/lairrc ]; then
    . /etc/lairrc
fi
if [ -f $HOME/.lairrc ]; then
    . $HOME/.lairrc
fi
mkdir -p $HOME/.config/lair/
lair-index-resources "$DEFAULT" > "$HOME/.config/lair/default-resources.xml"
for d in "$LAIR_RESOURCE_FOLDERS"; do
    lair-index-resources "$d" > "$HOME/.config/lair/$d-resources.xml"
done
LAIR "$@"